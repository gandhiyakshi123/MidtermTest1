                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </TableView>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label prefHeight="18.0" prefWidth="114.0" text="Number of Students:">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                  <TextArea prefHeight="52.0" prefWidth="138.0">
                     <HBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                     </HBox.margin>
                  </TextArea>
                  <ComboBox prefWidth="150.0" promptText="Select Province" />
                        <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="117.0" text="Load All Students">
                            <HBox.margin>
                                <Insets left="20.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
